    script.
      $('#shownav').click(function(){
          $('#shownav').fadeOut();
          $('#nav').fadeIn();
          });
        $('#login').click(authsubmit);
      var counter =0;
        var menuLeft = document.getElementById( 'cbp-spmenu-s1' ),
            menuRight = document.getElementById( 'cbp-spmenu-s2' ),
            showLeft = document.getElementById( 'showLeft' ),
            showRight = document.getElementById( 'showRight' ),
            body = document.body;
        
        showLeft.onclick = function() {
          switch(counter)
            {case(1):
                         counter=0;
                         $('#showLeft').removeClass('active' );
                         $('#cbp-spmenu-s1').removeClass('cbp-spmenu-open' );
                         $('.container').css('-webkit-filter','brightness(1)');
                        break;
                        case(0):
                          counter=1;
                          $('#showLeft').addClass('active' );
                          $('#cbp-spmenu-s1').addClass('cbp-spmenu-open' );
                          $('.container').css('-webkit-filter','brightness(0.6)');
                        break;
                      }
        };
      // AUTHSUBMIT FUNCTION
      var allowauth = 1;
      function authsubmit() {
      allowauth = 0;
      var vlgn = $('#vlgn').val();
      var vphr = $('#vphr').val();
      console.log(vlgn +" , "+vphr);
      request = new XMLHttpRequest();
      request.onreadystatechange = function () {
      var DONE = this.DONE || 4;
      if (this.readyState === DONE){
      var index;
      parsed = JSON.parse(request.responseText);
      console.log(parsed);
      if(parsed.trouble === 1)
      {
      console.log('TROUBLE === 1');
      switch (parsed.mtext){
      case('db'):
      $('#message').empty();
      $('#message').append("<h5 style='color:#fc454e;'>Sorry, omething is slightly off with the DB, try again in a couple of minutes or contact support</h5>");
      allowauth = 1;
      break;
      case('wrong pas'):
      $('#message').empty();
      $('#message').append("<h5 style='color:#fc454e;'>Wrong password</h5>");
      allowauth = 1;
      break;
      case('wronguser'):
      $('#message').empty();
      $('#message').append("<h5 style='color:#fc454e;'>Wrong email</h5>");
      allowauth =1;
      break;
      }}
      else {
      window.location = 'http://peopleandbooks.com';
      }
      }
      };
      request.open('POST', '/check', true);
      request.setRequestHeader('X-Requested-With', 'XMLHttpRequest');  // Tells server that this call is made for ajax purposes.
      request.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
      //Most libraries like jQuery/Prototype/Dojo do this
      request.send("phr="+vphr+"&lgn="+vlgn);
      }
    
           
